  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Funder",
  "description": "Financial contributor of the learning resource",
  "type": "array",
  "properties": {
    "type": {
      "title": "Type",
      "type": "string",
      "enum": [
        "Person",
        "FundingScheme",
        "Organization"
      ]
    },
    "id": {
      "title": "URL",
      "type": "string",
      "format": "uri"
    },
    "name": {
      "title": "Name",
      "type": "string"
    }
  },
  "required": [
    "type",
    "name"
  ]
}
