{
  "$id": "https://w3id.org/kim/amb/20231019/schemas/context-schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "JSON-LD Context",
  "description": "The JSON-LD context for the structured resource descriptions",
  "type": "array",
  "minItems": 2,
  "allOf": [
    {
      "contains": {
        "type": "string",
        "format": "uri",
        "enum": ["https://w3id.org/kim/amb/context.jsonld"]
      }
    },
    {
      "contains": {
        "type": "object",
        "properties": {
          "@language": {
            "$ref": "https://w3id.org/kim/amb/20231019/schemas/language.json"
          }
        },
        "required": ["@language"]
      }
    }
  ]
}
